{
  "name": "Client",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Client's full name or company name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Client's email address"
    },
    "phone": {
      "type": "string",
      "description": "Client's phone number"
    },
    "company": {
      "type": "string",
      "description": "Client's company name"
    },
    "address": {
      "type": "string",
      "description": "Client's address"
    },
    "website": {
      "type": "string",
      "description": "Client's website URL"
    },
    "notes": {
      "type": "string",
      "description": "Internal notes about the client"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "prospect"
      ],
      "default": "prospect",
      "description": "Client relationship status"
    },
    "onboarding_completed": {
      "type": "boolean",
      "default": false,
      "description": "Whether client onboarding is complete"
    },
    "total_revenue": {
      "type": "number",
      "default": 0,
      "description": "Total revenue from this client"
    },
    "avatar_url": {
      "type": "string",
      "description": "Client's avatar image URL"
    }
  },
  "required": [
    "name",
    "email"
  ]
}